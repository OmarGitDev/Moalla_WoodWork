<style type="text/css">
    input[type=text], select {
        text-align: center;
        text-align-last: center;
    }
</style>


   

                <div class="container-fluid">
              
                  
                   
                        <div class="OurCard-body" style="margin-bottom:15px;">
                            <div class="row">
                                
                                <div class="col-md-4">
                                    @Html.Label("Client")
                                    @Html.DropDownList("ClientSelector", Gestion_Commerciale.Controllers.VenteController.GetClientsList(), new { @class = "form-control border-left-info", onchange = "RefreshClientsStats()" })
                                </div>
                                <div class="col-md-1">
                                </div>
                                    <div class="col-md-2">
                                        @Html.Label("Année")
                                        @Html.DropDownList("AnneeSelector", Gestion_Commerciale.Controllers.StatistiquesController.GetYearsList(), new { @class = "form-control border-left-info", onchange = "GetClientStatValueBarChart()" })
                                    </div>
                            </div>
                            </div>

                        <div class="row">
                            <div class="col-xl-8 col-md-7">



                                <!-- Bar Chart -->
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3">
                                        <h6 style="align-self:center" class="h3 mb-0 text-gray-800">Chiffres par client</h6>

                                    </div>.
                                    <div class="card-body">
                                        <div class="chart-bar">
                                            <canvas id="VenteByClientBarChart"></canvas>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-xl-4 col-md-5">
                                <div class="card shadow mb-4">
                                    <!-- Card Header - Dropdown -->
                                    <div class="card-header py-3">
                                        <h6 style="align-self:center" class="h3 mb-0 text-gray-800">Paiements</h6>

                                    </div>
                                    <!-- Card Body -->
                                    <div class="card-body">
                                        <div class="chart-pie pt-4">
                                            <canvas id="ReglementsByClient"></canvas>
                                        </div>
                                       </div>
                                </div>
                            </div>
                        </div>

                </div>
              
   
   
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    
    




    <!-- Page level plugins -->
    <script src="~/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
