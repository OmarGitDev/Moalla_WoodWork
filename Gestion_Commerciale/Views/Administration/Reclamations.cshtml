<style type="text/css">
    input[type=text], select {
        text-align: center;
        text-align-last: center;
    }
</style>
@{
    DateTime DateDef = new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1);
    string DateFromDefault = DateDef.ToString("yyyy-MM-dd");
    string DateToDefault = DateDef.AddMonths(1).AddDays(-1).ToString("yyyy-MM-dd");

}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 style="align-self:center" class="h3 mb-0 text-gray-800">Réclamations</h6>
        <div class="row">
            <div class="col-md-4">
                @Html.Label("Date depuis")
                @Html.TextBox("DateFromFilter", DateFromDefault, new { @onchange = "RefreshReclamations();", @Type = "date", @class = "form-control border-left-info" })
            </div>
            <div class="col-md-4">
                @Html.Label("Date jusqu'à")
                @Html.TextBox("DateToFilter", DateToDefault, new { @onchange = "RefreshReclamations();", @Type = "date", @class = "form-control border-left-info" })
            </div>
            <div class="col-md-4">
                @Html.Label("Client")
                @Html.DropDownList("ClientFilter", Gestion_Commerciale.Controllers.VenteController.GetClientsList(), new { @onchange = "RefreshReclamations();", @class = "form-control border-left-info", @style = "width:100%" })
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered dt-responsive nowrap" style="width:100%"
                   id="ReclamationsGrid">
                <thead>
                    <tr>
                        <th style="text-align:center;">ID</th>
                        <th style="text-align:center;">
                            Client
                        </th>
                        <th style="text-align:center;">
                            Date
                        </th>
                        <th style="text-align:center;">
                            Reclamation
                        </th>


                    </tr>
                </thead>
                <tbody align="center"></tbody>

            </table>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        debugger;
        LoadReclamations();
        $("#ClientFilter").select2({
            theme: "classic"
        });
    });


</script>
<script src="~/Scripts/Administration-JS.js"></script>



