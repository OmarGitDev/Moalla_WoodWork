



<style type="text/css">
    input[type=text], select {
        text-align: center;
        text-align-last: center;
    }
</style>
@Html.Hidden("OwnerType", "Client")
<div class="card shadow mb-4">
    <div class="card-header py-3">

        <h6 class="m-0 font-weight-bold text-primary">Comptes bancaires</h6>

        <button onclick="OpenCompteBancaireEditor(0)" style="float:right" class="btn btn-success btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">Ajouter</span>
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered dt-responsive nowrap" style="width:100%"
                   id="CompteBancaireGrid">
                <thead>
                    <tr>
                        <th style="text-align:center;">ID</th>
                        <th style="text-align:center;">

                        </th>
                        <th style="text-align:center;">
                            Libéllé
                        </th>
                        <th style="text-align:center;">
                            Owner
                        </th>
                        <th style="text-align:center;">
                            Owner Name
                        </th>

                        <th style="text-align:center;">
                            Banque
                        </th>
                        <th style="text-align:center;">
                            RIB
                        </th>



                    </tr>
                </thead>
                <tbody align="center"></tbody>

            </table>
        </div>
    </div>
</div>
<div class="row ">
    <button id="ClientOwnerSourceBtn" onclick="ChangeBancOwnerSourceType('Client')" style="align-self:center;float:right" class="btnSources btn btn-primary">

        <span class="text"><b>Clients</b></span>
    </button>
    
        <button id="FournisseurOwnerSourceBtn" onclick="ChangeBancOwnerSourceType('Fournisseur')" style="align-self:center;float:right" class="btnSources btn btn-default">
            <span class="text"><b>Fournisseurs</b></span>
        </button>
                        <button id="STEOwnerSourceBtn" onclick="ChangeBancOwnerSourceType('STE')" style="align-self:center;float:right" class="btnSources btn btn-default">
                            <span class="text"><b>@SessionParameters.CurrentSTEName</b></span>
                        </button>
    
</div>





<script type="text/javascript">
    $(document).ready(function () {
        debugger;
        LoadCompteBancaireData();
    });


</script>
<script src="~/Scripts/Administration-JS.js"></script>



