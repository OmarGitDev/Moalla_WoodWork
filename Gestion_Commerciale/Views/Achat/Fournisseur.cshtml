


<style type="text/css">
    input[type=text], select {
        text-align: center;
        text-align-last: center;
    }
</style>
@Html.Hidden("TypeFournisseur", "Marchandise")
<div class="card shadow mb-4">
    <div class="card-header py-3">

        <h6 style="align-self:center" class="h3 mb-0 text-gray-800">Fournisseurs</h6>
        <button onclick="OpenFournisseurEditor(0)" style="float:right" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">Ajouter</span>
        </button>
        <div class="row ">
            <button id="MarchandiseBtn" onclick="ChangeFournisseurType('Marchandise')" style="align-self:center;float:right" class="btnSources btn btn-primary">

                <span class="text"><b>Marchandise</b></span>
            </button>

            <button id="FournitureBtn" onclick="ChangeFournisseurType('Fourniture')" style="align-self:center;float:right" class="btnSources btn btn-default">
                <span class="text"><b>Fourniture / Services</b></span>
            </button>


        </div>
    </div>
    <div class="card-body">

        <div class="table-responsive">
            <table class="table table-striped table-bordered dt-responsive nowrap" style="width:100%"
                   id="FournisseursGrid">
                <thead>
                    <tr>

                        <th style="text-align:center;">ID</th>

                        <th style="text-align:center;">

                        </th>
                        <th style="text-align:center;">
                            NomFournisseur
                        </th>
                        <th style="text-align:center;">
                            Adresse
                        </th>
                        <th style="text-align:center;">
                            CodePostal
                        </th>
                        <th style="text-align:center;">
                            IBAN
                        </th>
                        <th style="text-align:center;">
                            Tel1
                        </th>
                        <th style="text-align:center;">
                            Tel2
                        </th>
                        <th style="text-align:center;">
                            Fax
                        </th>
                        <th style="text-align:center;">
                            MatriculeFiscal
                        </th>
                        <th style="text-align:center;">
                            IsActive
                        </th>

                    </tr>
                </thead>
                <tbody align="center"></tbody>

            </table>
        </div>
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        debugger;
        LoadFournisseurData();
    });


</script>
<script src="~/Scripts/Administration-JS.js"></script>


