@model TSD_DAL.Model.ServicesModel
<form id="ParamForm">
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.Qte)
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                @Html.Label("Référence")
                <div class="input-group text">
                    @Html.TextBoxFor(model => model.Reference, new { @class = "form-control border-left-info" })
                </div>
            </div>
            <div class="col-md-6">
                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                @Html.Label("Montant")
                <div class="input-group text">
                    @Html.TextBoxFor(model => model.Montant, new { @class = "form-control border-left-info" })
                </div>
            </div>
            </div>
        <div class="row">
            <div class="col-md-6">
                <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                @Html.Label("Libellé")
                <div class="input-group text">

                    @Html.TextBoxFor(model => model.Libelle, new { @class = "form-control border-left-info" })
                </div>
            </div>
            <div class="col-md-3">

                <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                @Html.Label("Vente")
                <div class="input-group boolean">
                    @Html.CheckBoxFor(model => model.Vente, new { style = "width:20px;height:20px;margin-top:40px", @class = "form-control border-left-info" })
                </div>
            </div>
            <div class="col-md-">

                <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                @Html.Label("Achat")
                <div class="input-group boolean">
                    @Html.CheckBoxFor(model => model.Achat, new { style = "width:20px;height:20px;margin-top:40px", @class = "form-control border-left-info" })
                </div>
            </div>


        </div>

        </div>
</form>
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-success" onclick="AddOrUpdateService()"><i class="ace-icon fa fa-check"></i> Valider</button>
        <button type="button" class="btn btn-sm" id="AnnulerP" data-dismiss="modal"><i class="ace-icon fa fa-times"></i> Annuler</button>
    </div>
